server {
	listen 80 default_server;
	listen [::]:80 default_server;

  server_name samojum.ml www.samojum.ml;
  index index.html index.php index.htm;
 
  return 301 https://$server_name$request_uri;
}

server {
	
	# Add index.php to the list if you are using PHP
	# index index.html index.htm index.nginx-debian.html;
	# Add index.php to the list if you are using PHP
	# index index.html index.htm index.nginx-debian.html;
  server_name samojum.ml www.samojum.ml; # managed by Certbot
	location / {
		root   /var/www/xrayweb;
		index  index.html index.htm;
		try_files $uri $uri/ /index.html;
	}
	location /kidcaremjpg {
		alias   /var/www/kidcaremjpg-web;
		index  index_ssl.html index_ssl.htm;
	}
  location /xray {
	  proxy_pass http://127.0.0.1:8686;
  }
	location /kidcarewss {
	  proxy_pass http://127.0.0.1:8002;
		proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection "Upgrade";
    proxy_set_header X-Real-IP $remote_addr;
  }
	location /samocat {
		proxy_pass http://127.0.0.1:2188;
		proxy_redirect off;
		proxy_http_version 1.1;
		proxy_set_header Upgrade $http_upgrade;
		proxy_set_header Connection "upgrade";
		proxy_set_header Host $http_host;
	}
	# listen 500 ssl;

	listen [::]:443 ssl ipv6only=on; # managed by Certbot
	listen 443 ssl; # managed by Certbot
	ssl_certificate /etc/letsencrypt/live/www.samojum.ml/fullchain.pem; # managed by Certbot
	ssl_certificate_key /etc/letsencrypt/live/www.samojum.ml/privkey.pem; # managed by Certbot
	include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
	ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}
